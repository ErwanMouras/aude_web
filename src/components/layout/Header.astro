---
import LanguageSwitcher from '../ui/LanguageSwitcher.astro';
---

<header class="bg-[#f8f6f0] border-b border-gray-200 sticky top-0 z-40 backdrop-blur-sm bg-opacity-90">
  <div class="container mx-auto px-6">
    <div class="flex items-center justify-between py-4">
      <!-- Logo -->
      <div class="logo">
        <a href="/" class="text-xl font-bold text-[#2c2c2c] hover:text-black transition-colors">
          <h1>AUDE MOURADIAN</h1>
        </a>
      </div>
      
      <!-- Desktop Navigation -->
      <nav class="hidden lg:flex items-center space-x-8">
        <div class="nav-item group relative">
          <a href="/architecture" class="nav-link text-[#2c2c2c] hover:text-black transition-colors py-2">
            Architecture
          </a>
          <div class="dropdown-menu absolute left-0 top-full mt-2 w-48 bg-white shadow-lg rounded-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
            <ul class="py-2">
              <li><a href="/residential" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Résidentiel</a></li>
              <li><a href="/commercial" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Commercial</a></li>
              <li><a href="/hospitality" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Hôtellerie</a></li>
            </ul>
          </div>
        </div>
        
        <div class="nav-item group relative">
          <a href="/design" class="nav-link text-[#2c2c2c] hover:text-black transition-colors py-2">
            Design
          </a>
          <div class="dropdown-menu absolute left-0 top-full mt-2 w-48 bg-white shadow-lg rounded-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
            <ul class="py-2">
              <li><a href="/furniture" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Mobilier</a></li>
              <li><a href="/lighting" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Éclairage</a></li>
              <li><a href="/objects" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Objets</a></li>
              <li><a href="/bespoke" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Sur Mesure</a></li>
            </ul>
          </div>
        </div>
        
        <div class="nav-item group relative">
          <a href="/creative" class="nav-link text-[#2c2c2c] hover:text-black transition-colors py-2">
            Créatif
          </a>
          <div class="dropdown-menu absolute left-0 top-full mt-2 w-48 bg-white shadow-lg rounded-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
            <ul class="py-2">
              <li><a href="/exhibitions" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Expositions</a></li>
              <li><a href="/publications" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Publications</a></li>
              <li><a href="/photography" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Photographie</a></li>
            </ul>
          </div>
        </div>
        
        <div class="nav-item group relative">
          <a href="/studio" class="nav-link text-[#2c2c2c] hover:text-black transition-colors py-2">
            Studio
          </a>
          <div class="dropdown-menu absolute left-0 top-full mt-2 w-48 bg-white shadow-lg rounded-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
            <ul class="py-2">
              <li><a href="/about" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">À Propos</a></li>
              <li><a href="/contact" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Contact</a></li>
              <li><a href="/press" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Presse</a></li>
            </ul>
          </div>
        </div>
        
        <a href="/blog" class="text-[#2c2c2c] hover:text-black transition-colors">Blog</a>
      </nav>
      
      <!-- Header Right -->
      <div class="flex items-center space-x-4">
        <!-- Language Switcher -->
        <LanguageSwitcher />
        
        <!-- Mobile Menu Toggle -->
        <button id="mobile-menu-toggle" class="lg:hidden flex flex-col justify-center items-center w-6 h-6 space-y-1">
          <span class="w-6 h-0.5 bg-[#2c2c2c] transition-all duration-300"></span>
          <span class="w-6 h-0.5 bg-[#2c2c2c] transition-all duration-300"></span>
          <span class="w-6 h-0.5 bg-[#2c2c2c] transition-all duration-300"></span>
        </button>
      </div>
    </div>
  </div>
  
  <!-- Mobile Navigation -->
  <div id="mobile-menu" class="lg:hidden fixed top-16 left-0 w-full bg-white shadow-lg transform -translate-y-full opacity-0 transition-all duration-300 z-30">
    <nav class="px-6 py-4">
      <ul class="space-y-4">
        <li>
          <details class="group">
            <summary class="flex items-center justify-between py-2 cursor-pointer">
              <span>Architecture</span>
              <svg class="w-4 h-4 transition-transform group-open:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </summary>
            <ul class="mt-2 ml-4 space-y-2">
              <li><a href="/residential" class="block py-1 text-sm text-gray-600">Résidentiel</a></li>
              <li><a href="/commercial" class="block py-1 text-sm text-gray-600">Commercial</a></li>
              <li><a href="/hospitality" class="block py-1 text-sm text-gray-600">Hôtellerie</a></li>
            </ul>
          </details>
        </li>
        <li>
          <details class="group">
            <summary class="flex items-center justify-between py-2 cursor-pointer">
              <span>Design</span>
              <svg class="w-4 h-4 transition-transform group-open:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </summary>
            <ul class="mt-2 ml-4 space-y-2">
              <li><a href="/furniture" class="block py-1 text-sm text-gray-600">Mobilier</a></li>
              <li><a href="/lighting" class="block py-1 text-sm text-gray-600">Éclairage</a></li>
              <li><a href="/objects" class="block py-1 text-sm text-gray-600">Objets</a></li>
              <li><a href="/bespoke" class="block py-1 text-sm text-gray-600">Sur Mesure</a></li>
            </ul>
          </details>
        </li>
        <li>
          <details class="group">
            <summary class="flex items-center justify-between py-2 cursor-pointer">
              <span>Créatif</span>
              <svg class="w-4 h-4 transition-transform group-open:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </summary>
            <ul class="mt-2 ml-4 space-y-2">
              <li><a href="/exhibitions" class="block py-1 text-sm text-gray-600">Expositions</a></li>
              <li><a href="/publications" class="block py-1 text-sm text-gray-600">Publications</a></li>
              <li><a href="/photography" class="block py-1 text-sm text-gray-600">Photographie</a></li>
            </ul>
          </details>
        </li>
        <li>
          <details class="group">
            <summary class="flex items-center justify-between py-2 cursor-pointer">
              <span>Studio</span>
              <svg class="w-4 h-4 transition-transform group-open:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </summary>
            <ul class="mt-2 ml-4 space-y-2">
              <li><a href="/about" class="block py-1 text-sm text-gray-600">À Propos</a></li>
              <li><a href="/contact" class="block py-1 text-sm text-gray-600">Contact</a></li>
              <li><a href="/press" class="block py-1 text-sm text-gray-600">Presse</a></li>
            </ul>
          </details>
        </li>
        <li><a href="/blog" class="block py-2">Blog</a></li>
      </ul>
    </nav>
  </div>
</header>

<script>
  // Mobile menu toggle
  const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
  const mobileMenu = document.getElementById('mobile-menu');
  
  mobileMenuToggle?.addEventListener('click', () => {
    const isOpen = mobileMenu?.classList.contains('translate-y-0');
    
    if (isOpen) {
      mobileMenu?.classList.remove('translate-y-0', 'opacity-100');
      mobileMenu?.classList.add('-translate-y-full', 'opacity-0');
    } else {
      mobileMenu?.classList.add('translate-y-0', 'opacity-100');
      mobileMenu?.classList.remove('-translate-y-full', 'opacity-0');
    }
  });
  
  // Close mobile menu when clicking outside
  document.addEventListener('click', (e) => {
    const target = e.target as HTMLElement;
    if (!mobileMenuToggle?.contains(target) && !mobileMenu?.contains(target)) {
      mobileMenu?.classList.remove('translate-y-0', 'opacity-100');
      mobileMenu?.classList.add('-translate-y-full', 'opacity-0');
    }
  });
</script>